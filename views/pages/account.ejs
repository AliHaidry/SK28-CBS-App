<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
        integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/css/styles.css">
    <!-- Latest compiled and minified CSS -->
    <title>Account</title>

</head>



<div class="container-fluid">

    <div class="offset-3 justify-content-center w-50"> <%- include('../partials/navbar.ejs',{user:user}) %></div>
    <div class="row">
        <div class="col-md-6   border-bar">
            <h3 class="text-center p-3 display-3 bottom-bar mb-5">
                My Classifieds
            </h3>
            <div class="row">
                <% for(var classifiedEntry = 0; classifiedEntry < classifieds.length; classifiedEntry++ ) { %>
                <%- include('../partials/myClassifiedEntry.ejs',
                    {title: classifieds[classifiedEntry].name,
                     _id: classifieds[classifiedEntry]._id,
                    description: classifieds[classifiedEntry].description,
                    price: classifieds[classifiedEntry].price,
                    category: classifieds[classifiedEntry].categorys,
                    postType: classifieds[classifiedEntry].postType,
                    image: classifieds[classifiedEntry].image});
                    %>
                <% }%>

            </div>
            <% if(classifieds.length == 0) { %>
            <h5 class="d-flex justify-content-center text-muted ">Empty...</h5>
            <%}%>
        </div>
        <div class="col-md-6 ">
            <h3 class="text-center p-3 display-3  bottom-bar " >
                My Favourites
            </h3>
            <div class="row">
                <% if(favourites.length != 0) { %>
            <% for(var favouritesEntry = 0; favouritesEntry < favourites.length; favouritesEntry++ ) { %>
            <%- include('../partials/myFavouriteEntry.ejs',
                        {title: favourites[favouritesEntry].classified.name,
                         _id: favourites[favouritesEntry].classified._id,
                        description: favourites[favouritesEntry].classified.description,
                        price: favourites[favouritesEntry].classified.price,
                        category: favourites[favouritesEntry].classified.categorys,
                        postType: favourites[favouritesEntry].classified.postType,
                        image: favourites[favouritesEntry].classified.image});
                        %>
            <% }}else{%>

        </div>
        <h5 class="d-flex justify-content-center text-muted">Empty...</h5>
        <%}%>
            </div>
        </div>
    </div>
</div>






<script src="https://code.jquery.com/jquery-3.5.1.js"
