<div class="col-md-4 ">
    <div class="card zoom">
        <img class="card-img-top img-thumbnail" src=" <%=image%> " />
        <div class=" card-block p-3">

            <h5 class="card-title text-center desc">
                <%= title %>
            </h5>

            <form method="POST" action="/deleteClassified">
                <p>

                    <button type="button" class="btn btn-danger deleteConfirm" data-btn-ok-label="Delete"
                        data-btn-ok-class="btn btn-danger" data-placement="right" data-original-title=""
                        title="Are you sure?" data-toggle="confirmation">Remove</button> <a
                        class="btn btn-secondary float-right" href="classified?_id=<%=_id%>">View</a>
                    <input type="hidden" name="_id" value="<%=_id%>" />
                </p>
            </form>
        </div>
    </div>
</div>