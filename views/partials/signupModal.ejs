<div class="modal fade hide" id="signupModal" aria-labelledby="signupModalTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="signupModalTitle">Sign up</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="signup" class="col-md-8 offset-md-1" method="POST" action="/register"
                    oninput='signUpPasswordConfirm.setCustomValidity(signUpPasswordConfirm.value != signUpPassword.value ? "Passwords need to match" : "" )'>
                    <div class="form-group">
                        <input required="required" type="email" class="form-control mb-3 mt-3" id="signUpEmail"
                            placeholder="Email" name="username" />
                        <input required="required" type="password" class="form-control mb-3 mt-3" id="signUpPassword"
                            placeholder="Password" name="password" />
                        <input required="required" type="password" class="form-control mb-3 mt-3"
                            id="signUpPasswordConfirm" placeholder="Confirm Password" name="passwordConfirm" />
                        <input id="signUpSubmit" type="submit" value="Sign Up" class="btn btn-outline-primary" />
                    </div>
                </form>
            </div>
            <div id="errTextSignup" class="alert alert-danger m-3" style="display: none"></div>
            <div class="modal-footer">
                <a class="float-right" data-dismiss="modal" data-toggle="modal" data-target="#loginModal">Already a
                    user? Login here</a>
            </div>
        </div>
    </div>
</div>